---
import Layout from '../layouts/Layout.astro';

// Fetch skills from the registry at build/runtime
// use local proxy which itself respects SKILLS_REGISTRY_URL
let skills = [];

try {
  const res = await fetch(`/api/skills?limit=100`);
  if (res.ok) {
    const body = await res.json();
    // expect { skills: [...], total: ..., page: ..., limit: ... }
    skills = body.skills || [];
  } else {
    console.warn('skills page: failed to fetch registry', res.status, res.statusText);
  }
} catch (err) {
  console.warn('skills page: error fetching registry', err);
}

