---

<Layout title="Skills Directory - CoderClaw">
  <main class="skills-container">
    <header class="skills-header">
      <h1>Agent Skills Directory</h1>
      <p class="lead">
        Discover and share powerful agent skills. Browse our community-created skills or upload your own.
      </p>
      <button class="btn-upload-skill">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M5 12h14"/>
        </svg>
        Share Your Skill
      </button>
    </header>

    <section class="filters-section">
      <div class="filter-group">
        <label for="category-filter">Category</label>
        <select id="category-filter" class="filter-select">
          <option value="">All Categories</option>
          {categories.map(cat => (
            <option value={cat}>{cat}</option>
          ))}
        </select>
      </div>

      <div class="filter-group">
        <label for="search-skills">Search</label>
        <input 
          id="search-skills"
          type="text" 
          placeholder="Search skills..." 
          class="filter-input"
        />
      </div>

      <div class="filter-group">
        <label for="sort-by">Sort By</label>
        <select id="sort-by" class="filter-select">
          <option value="trending">Trending</option>
          <option value="newest">Newest</option>
          <option value="popular">Most Popular</option>
          <option value="downloads">Most Downloaded</option>
        </select>
      </div>
    </section>

    <div class="skills-grid">
      {skills.map(skill => (
        <article class="skill-card">
          <div class="skill-image" style={`background-image: url('${skill.image}')`}></div>
          <div class="skill-content">
            <h3 class="skill-name">{skill.name}</h3>
            <p class="skill-author">by {skill.author}</p>
            <p class="skill-description">{skill.description}</p>
            
            <div class="skill-tags">
              {skill.tags.map(tag => (
                <span class="skill-tag">{tag}</span>
              ))}
            </div>

            <div class="skill-footer">
              <div class="skill-stats">
                <div class="stat">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                  </svg>
                  <span>{skill.likes}</span>
                </div>
                <div class="stat">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                    <polyline points="7 10 12 15 17 10"/>
                    <line x1="12" y1="15" x2="12" y2="3"/>
                  </svg>
                  <span>{skill.downloads}</span>
                </div>
              </div>
              <button class="btn-use-skill">Use Skill â†’</button>
            </div>
          </div>
        </article>
      ))}
    </div>

    <section class="upload-cta">
      <h2>Created an Amazing Skill?</h2>
      <p>Share it with our community and help other developers build better agents.</p>
      <button class="btn-primary-large">
        Upload Your Skill
      </button>
    </section>
  </main>
</Layout>

<style>
  .skills-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 24px;
  }

  .skills-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .skills-header h1 {
    font-family: var(--font-display);
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--text-primary);
  }

  .lead {
    font-size: 18px;
    color: var(--text-secondary);
    margin-bottom: 32px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .btn-upload-skill {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 12px 24px;
    background: var(--coral-bright);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .btn-upload-skill:hover {
    background: var(--coral-mid);
    transform: translateY(-2px);
  }

  .filters-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 40px;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .filter-group label {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .filter-select,
  .filter-input {
    padding: 10px 14px;
    background: var(--surface-card);
    border: 1px solid var(--border-subtle);
    border-radius: 6px;
    color: var(--text-primary);
    font-size: 14px;
    font-family: inherit;
    transition: border-color 0.2s ease;
  }

  .filter-select:focus,
  .filter-input:focus {
    outline: none;
    border-color: var(--coral-bright);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
    margin-bottom: 60px;
  }

  .skill-card {
    display: flex;
    flex-direction: column;
    background: var(--surface-card);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .skill-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-accent);
    box-shadow: 0 8px 24px rgba(77, 158, 255, 0.15);
  }

  .skill-image {
    width: 100%;
    height: 180px;
    background-size: cover;
    background-position: center;
  }

  .skill-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .skill-name {
    font-size: 18px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 4px;
  }

  .skill-author {
    font-size: 12px;
    color: var(--text-muted);
    margin-bottom: 12px;
  }

  .skill-description {
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 16px;
    flex: 1;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 16px;
  }

  .skill-tag {
    display: inline-block;
    padding: 4px 12px;
    background: var(--surface-interactive);
    color: var(--text-secondary);
    font-size: 12px;
    font-weight: 500;
    border-radius: 20px;
  }

  .skill-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    padding-top: 16px;
    border-top: 1px solid var(--border-subtle);
  }

  .skill-stats {
    display: flex;
    gap: 16px;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: var(--text-secondary);
  }

  .stat svg {
    color: var(--coral-bright);
  }

  .btn-use-skill {
    padding: 8px 16px;
    background: var(--surface-interactive-hover);
    border: 1px solid var(--border-subtle);
    color: var(--text-primary);
    border-radius: 6px;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .btn-use-skill:hover {
    background: var(--coral-bright);
    color: white;
    border-color: var(--coral-bright);
  }

  .upload-cta {
    background: linear-gradient(135deg, var(--surface-coral-soft) 0%, var(--surface-cyan-soft) 100%);
    border: 1px solid var(--border-accent);
    border-radius: 12px;
    padding: 48px 32px;
    text-align: center;
  }

  .upload-cta h2 {
    font-family: var(--font-display);
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 12px;
    color: var(--text-primary);
  }

  .upload-cta p {
    font-size: 16px;
    color: var(--text-secondary);
    margin-bottom: 24px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .btn-primary-large {
    display: inline-flex;
    padding: 14px 32px;
    background: var(--coral-bright);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn-primary-large:hover {
    background: var(--coral-mid);
    transform: translateY(-2px);
  }

  @media (max-width: 1024px) {
    .skills-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .skills-container {
      padding: 24px 16px;
    }

    .skills-header h1 {
      font-size: 36px;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }

    .filters-section {
      grid-template-columns: 1fr;
    }

    .upload-cta {
      padding: 32px 24px;
    }

    .upload-cta h2 {
      font-size: 28px;
    }
  }
</style>

<script>
  // Search and filter functionality
  const searchInput = document.getElementById('search-skills');
  const categoryFilter = document.getElementById('category-filter');
  const sortBy = document.getElementById('sort-by');

  if (searchInput && categoryFilter && sortBy) {
    const filterSkills = () => {
      const searchTerm = searchInput.value.toLowerCase();
      const selectedCategory = categoryFilter.value;
      const cards = document.querySelectorAll('.skill-card');

      cards.forEach(card => {
        const name = card.querySelector('.skill-name').textContent.toLowerCase();
        const description = card.querySelector('.skill-description').textContent.toLowerCase();
        const category = card.querySelector('.skill-author').textContent.toLowerCase();

        const matchesSearch = !searchTerm || name.includes(searchTerm) || description.includes(searchTerm);
        const matchesCategory = !selectedCategory || category.includes(selectedCategory.toLowerCase());

        card.style.display = (matchesSearch && matchesCategory) ? '' : 'none';
      });
    };

    searchInput.addEventListener('input', filterSkills);
    categoryFilter.addEventListener('change', filterSkills);
  }
</script>
